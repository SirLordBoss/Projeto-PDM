<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".HomePageEduc">

    <TextView
        android:id="@+id/titulo_homeeduc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/kindergarten"
        android:gravity="center"
        android:shadowColor="@android:color/white"
        android:shadowDx="8"
        android:shadowDy="8"
        android:shadowRadius="1"
        android:text="@string/titchersfriend"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingEnd="11dp">

            <ImageButton
                android:id="@+id/gerirAlunos"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:background="@drawable/cantos_botoes"
                android:padding="20dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/user_icon"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txtGerirAlunos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sweet_purple"
                android:text="@string/gerir_alunos"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="15dp">

            <ImageButton
                android:id="@+id/gerirAulas"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:background="@drawable/cantos_botoes"
                android:padding="20dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/aulas_icon"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txtGerirAulas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sweet_purple"
                android:text="@string/gerir_aulas"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="32sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/mudarPass"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:background="@drawable/cantos_botoes"
                android:padding="10dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/mudarpass_icon"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txtMudarPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sweet_purple"
                android:text="@string/mudar_password"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <ImageButton
                android:id="@+id/gerirEduc"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:background="@drawable/cantos_botoes"
                android:padding="15dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/faltas_icon"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txtGerirEduc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sweet_purple"
                android:text="@string/marcar_faltas"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="32sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/cantos_botoes"
        android:fontFamily="@font/sweet_purple"
        android:paddingStart="25dp"
        android:paddingTop="15dp"
        android:paddingEnd="25dp"
        android:paddingBottom="15dp"
        android:text="@string/sair"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="40sp" />

</LinearLayout>
