<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo_alergias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/kindergarten"
            android:gravity="center"
            android:shadowColor="@android:color/white"
            android:shadowDx="7"
            android:shadowDy="7"
            android:shadowRadius="1"
            android:text="@string/alergias"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="48sp" />


        <LinearLayout
            android:id="@+id/listaAlergias"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/addAlergia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/kindergarten"
                android:hint="@string/nova_alergia"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="36sp"
                tools:ignore="Autofill" />

            <Button
                android:id="@+id/btnAddAluno"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/cantos_botoes"
                android:fontFamily="@font/kindergarten"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="@string/mais"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="48sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:gravity="center|top"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSubmeterFaltas"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:background="@drawable/cantos_botoes"
                android:fontFamily="sans-serif"
                android:text="@string/submeter"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btnCancelarFaltas"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:background="@drawable/cantos_botoes"
                android:fontFamily="sans-serif"
                android:text="@string/cancelar"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>